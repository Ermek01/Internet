<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/tvCurrentWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="40c"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/now"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="307dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="48dp"
        android:textSize="20sp"
        tools:text="Name"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/now"
        android:text="@string/now"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="112dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCityName"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/today"
        android:text="@string/today"
        android:layout_marginTop="112dp"
        android:layout_marginStart="62dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/now"
        app:layout_constraintTop_toBottomOf="@id/tvCityName"
        />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:text="cloud"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentWeather"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvWeatherMax"
        android:text="40"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="49dp"
        app:layout_constraintTop_toBottomOf="@id/today"
        app:layout_constraintLeft_toRightOf="@id/tvCurrentWeather"/>

    <TextView
        android:id="@+id/tvWeatherMin"
        android:text="40"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/today"
        app:layout_constraintLeft_toRightOf="@id/tvWeatherMax"/>

    <TextView
        android:id="@+id/max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="60dp"
        android:text="@string/max"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvWeatherMax"
        app:layout_constraintLeft_toRightOf="@id/tvDesc"/>

    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="11dp"
        android:text="@string/min"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvWeatherMin"
        app:layout_constraintLeft_toRightOf="@id/max"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentWeather"
        android:orientation="horizontal"
        tools:listitem="@layout/item_forecast"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>